<?xml version="1.0" encoding="UTF-8"?>

<pyvcp>

   <hbox>
      <relief>RAISED</relief>
      <bd>3</bd>
      <meter>
         <halpin>"spindle-speed"</halpin>
         <text>"Speed"</text>
         <subtext>"tr/mn"</subtext>
         <size>250</size>
         <min_>0</min_>
         <max_>24000</max_>
         <majorscale>2000</majorscale>
         <minorscale>1000</minorscale>
         <region1>0,6000,"yellow"</region1>
	 <region2>6000,20000,"green"</region2>
	 <region3>20000,24000,"red"</region3>
      </meter>

      <meter>
       <halpin>"spindle-amperage"</halpin>
         <text>"Amp"</text>
         <subtext>"A"</subtext>
         <size>250</size>
         <min_>0</min_>
         <max_>8</max_>
         <majorscale>1</majorscale>
         <minorscale>0.1</minorscale>
         <region1>0,5,"green"</region1>
	 <region2>5,7,"yellow"</region2>
	 <region3>7,8,"red"</region3>
      </meter>

   </hbox>
   
   <hbox>
      <label>
        <text>"Probe : "</text>
        <font>("Arial",12)</font>
      </label>

      <led>
        <halpin>"led-probe-in"</halpin>
        <height>"30"</height>
        <width>"30"</width>
        <on_color>"green"</on_color>
        <off_color>"red"</off_color>
       </led>
   </hbox>

   
